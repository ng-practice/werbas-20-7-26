ng-container(*ngIf='books | async as booksCollection; else errorTemplate')
  .alert.alert-primary(*ngIf='booksCollection.length === 0')
    | No books available

  .alert.alert-default {{ booksCollection.length }}

  .card(*ngFor='let book of booksCollection')
    img.card-img-top([src]='book.cover')
    .card-header {{ book.title }}
    .card-body
      .card-text {{ book.subtitle }}
      a.btn.btn-primary([routerLink]='[book.isbn]') Details

ng-template(#errorTemplate)
  | Error occurred
